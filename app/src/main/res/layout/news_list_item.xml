<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="2019-02-14 10:00" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/date"
        android:text="Another news" />

    <ImageView
        android:id="@+id/icon_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/icon_unread" />


    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginEnd="25dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Error quis sunt aut. Ut amet in quia sequi quia repudiandae. Est totam quia ipsam totam sunt magni fdg. Consequatur nemo et ad." />

</RelativeLayout>